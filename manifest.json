{
  "manifest_version": 3,
  "name": "ChatGPT Groups",
  "version": "1.0.0",
  "description": "Create Groups from chats on ChatGPT, Claude, and Perplexity.",
  "icons": { "128": "icons/icon128.png" },
  "permissions": ["storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://*.perplexity.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://*.perplexity.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.css"],
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://*.perplexity.ai/*"
      ]
    }
  ]
}
